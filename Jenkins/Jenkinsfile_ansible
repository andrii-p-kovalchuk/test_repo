/* groovylint-disable CompileStatic, DuplicateStringLiteral */
pipeline {
    agent any
    environment {
        ANSIBLE_VAULT_PASSWORD_FILE = credentials('ANSIBLE_VAULT_PASSWORD')
        GOOGLE_APPLICATION_CREDENTIALS = credentials('GOOGLE_CREDENTIALS_ID')
    }
    stages {
        stage('Ansible') {
            steps {
                echo 'Ansible'
                sh '''cd /var/lib/jenkins/workspace/Ansible/ansible
                ansible-playbook -i gcp-ansible.gcp.yml playbook.yml '''
            }
        }
    }
}
