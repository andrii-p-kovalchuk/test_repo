/* groovylint-disable CompileStatic, DuplicateStringLiteral, LineLength */
pipeline {
    agent any
    parameters {
        choice(name: 'DESTROY', choices: ['Yes', 'No'], description: 'Do you want to destroy terraform after building?')
    }
    stages {
        stage('Terraform init') {
            steps {
                dir('terraform-jenkins') {
                    echo 'Terraform init'
                    sh 'terraform init'
                }
            }
        }
        stage('Terraform Plan') {
            steps {
                dir('terraform-jenkins') {
                    echo 'Terraform plan'
                    sh 'terraform plan'
                }
            }
        }
        stage('Terraform destroy') {
            when {
                environment(name: 'DESTROY', value: 'Yes')
            }
            steps {
                script {
                    dir('terraform-jenkins')
                    echo 'Terraform destroy'
                    sh 'terraform destroy -auto-approve'
                }
            }
        }
    }
}
